  padding-left unit
  list-style-type none

.ab-title
  font-size 1.2rem
  font-weight bold
  padding unit 0 (unit / 2)

  a
    color black
    text-decoration none
    border-bottom 1px solid transparent
  a:hover
    border-bottom 1px solid #ccc

.ab-content
  color light-text
  padding-bottom (unit / 2)
  p(1.3rem)

  p
    font-size 1.2rem

