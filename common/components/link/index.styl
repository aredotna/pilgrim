.l-links
  clearfix()
  margin 0
  padding 0
  position absolute
  top topbar-height
  bottom 0
  width 100%
  overflow-x scroll
  overflow-y hidden
  white-space nowrap

.link
  &.is-expanded
    padding unit
    list-style-type none
    max-width 400px
    display inline-block
    height 100%
    overflow-y scroll
    overflow-x hidden
    white-space normal
    vertical-align top

    *
      float none !important

  &.has-error
    width 100%
    background-color pink

.link-title
  font-size 1.4rem
  line-height 1.6rem
  padding unit
  text-align center
  a
    color black
    text-decoration none
  a:hlinkover
    text-decoration underline

.link-content
  color light-text
  padding-bottom (unit / 2)
  p(1rem)

  video, iframe
    max-width 100% !important

  p
    font-size 1rem

  img
    max-width 100%
    height auto

  figure
    margin 0

  figcaption
    background-color #eee
    padding (unit/2)
    p
      font-size 0.7rem

  h1, h2, h3, h4, h5
    h4()

  table
    display none
  ul
    ul()

.link-image
  img
    max-width 100%

.link-divider
  border none
  border-top 1px solid #eee
  margin unit 0

@require './overrides'
