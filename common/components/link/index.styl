.l-links
  clearfix()
  margin 0
  padding 0
  position fixed
  top topbar-height
  bottom 0
  width 100%
  overflow-x hidden
  overflow-y hidden
  white-space nowrap
  margin-right 100%
  opacity 0

  &.is-active
    opacity 1

  +mobile()
    top 0px

.link
  display inline-block
  padding unit (unit * 2)
  width column-width
  height 100%
  overflow-y scroll
  white-space normal
  vertical-align top
  opacity 0.2
  zoom 1
  +mobile()
    opacity 1
    width 100vw
    padding unit
    -webkit-overflow-scrolling touch

  *
    float none !important

  &.is-hovered, &:only-child
    opacity 1

  &.has-no-content
    background-color error-bg

  &:first-child
    margin-left "calc(50% - %s)" % (column-width / 2)
    +mobile()
      margin-left 0

  &:last-child
    margin-right "calc(50% - %s)" % ((column-width + (unit * 2)) / 2)
    +mobile()
      margin-right 0

  &.will-be-chopped
    .link-title a
      color chopped
    .link-content
      color chopped
      a
        color chopped
      img
        opacity 0.1

.link-title
  font-size 1.8rem
  line-height 2rem
  padding unit
  text-align center
  a
    color black
    text-decoration none
  a:hover
    text-decoration underline
  &__link
    display block
    padding unit
  &__domain
    domain()
  +mobile()
    font-size 1.4rem

.link-content
  color light-text
  min-height 100%
  p(19px)
  margin 1.25em 0

  video, iframe
    max-width 100% !important

  p, span
    p(19px)
    margin 1.25em 0

  img
    max-width 100%
    height auto

  figure
    margin 0

  figcaption
    background-color #eee
    padding (unit/2)
    margin-bottom unit * 2
    font-size 12px !important
    line-height 18px
    span
      font-size 12px !important
      line-height 18px

  h1, h2, h3, h4, h5
    h4()

  table
    display none
  ul
    ul()

  blockquote
    blockquote(#ccc)
    font-size 19px
    line-height 34px
    p
      sans()
      font-size 16px
      line-height 30px

  a
    cursor e-resize
  a.is-active
    background-color highlight

  a[href$=".pdf"]
    cursor alias
  a[href$=".jpg"],
  a[href$=".jpeg"],
  a[href$=".png"],
  a[href$=".gif"]
    pointer-events none
    cursor default

.link-content__error
  @extend .link-content
  &:before
    content '!'
    display block
    margin unit auto (unit * 2)
    border 1px solid light-text
    padding 20px
    max-width 26px
    font-size 2rem
    text-align center
    border-radius 50px

  font-weight normal
  padding-bottom 100%

.link-image
  img
    max-width 100%

.link-divider
  border none
  border-top 1px solid #eee
  margin unit 0

@require './overrides'
