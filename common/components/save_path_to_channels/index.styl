.l-save-path-to-channels
  display flex
  flex-direction column
  align-items center
  justify-content center
  height 100%
  text-align center

.save-dialog
  &__search
    width 100%
    input
      width 100%
      padding (unit / 1.5)
      background-color #eee
      border none
      outline none
      sans()
  &__headline
    sans()
    font-weight normal
    color #aaa
  &__caption
    sans()
    color #aaa
    font-size 12px
    margin (unit) 0
  &__channels
    width 100%
    text-align left
  &__save
    width 100%
    button
      width 100%
      font-weight bold
      padding-top unit
      margin-top unit
      background-color transparent
      border-radius 0px
      border none
      border-top 1px solid black
      outline none
    sans()
    font-size 18px
