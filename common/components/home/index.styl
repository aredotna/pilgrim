.l-home
  text-align left

.home
  width 700px
  margin 0 auto

  +mobile()
    width 100%
    padding 0 (unit / 2)

  &__module
    padding (unit * 1.5) unit
    vertical-align top
    input[type="text"]
      background-color transparent
      color black
      margin 0 unit
      width 265px
      padding 5px
      border none
      outline 0
      border-bottom 2px solid black
      font-family 'Courier'
      font-size 22px
      border-radius 0
      &::-webkit-input-placeholder
         text-align center
      &:-moz-placeholder
         text-align center
      &::-moz-placeholder
         text-align center
      &:-ms-input-placeholder
         text-align center
      +mobile()
        width 100%
        margin (unit / 2) 0

    h1
      h2()
      font-size 1.6rem
      font-weight normal
      strong
        font-weight 700
    &__go
      font-family Arial
      font-size 1.4rem
      font-weight bold
      cursor pointer
      display inline-block
      margin-left unit
      background-color #eee
      border-radius unit
      padding 0 unit
      line-height 2.2rem
      &:hover
        background-color #ddd
    +mobile()
      &__bm
        display none
    &__bookmarklet
      display inline-block
      position relative
      margin 0 (unit / 2)
      &__display
        padding (unit / 2)
        border-bottom 4px solid #ddd
        border-right 4px solid #ddd
      &__snippet
        opacity 0
        position absolute
        width 100%
        height 100%
        left 0px
        right 0px
    &__about p
      font-size 19px
      line-height 34px

    &__examples
      reset-list()
      li
        margin-bottom unit
      &__title
        font-size 1.4rem
        color #1B00D9
        display block
        line-height 1.8rem
        margin-bottom (unit / 2)
      &__domain
        sans()
        color #aaa
        font-weight bold
        text-decoration none
        max-width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
        display block

    &__screenshots
      img
        max-width 100%

