global-reset()
normalize-css()

@require './variables.styl'

body-text()
  font-family Georgia, Garamond, Baskerville, 'Baskerville Old Face', 'Hoefler Text', 'Times New Roman', serif;

header-text()
  font-family Georgia, Garamond, Baskerville, 'Baskerville Old Face', 'Hoefler Text', 'Times New Roman', serif;
  font-weight 700

small-text()
  font-family Arial
  font-size 14px
  line-height 16px

html, body
  body-text()

#root
  margin (unit * 4) auto

h1
  h1()

h2
  h2()

h3
  h3()

h4
  h4()

h5
  h5()

h6
  h6()

p
  p()

hr
  rule()

ul
  ul()
