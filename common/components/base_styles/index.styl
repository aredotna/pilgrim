global-reset()
normalize-css()

@require './variables.styl'

*
  box-sizing border-box

body-text()
  font-family 'Georgia', serif

header-text()
  font-family 'Georgia', serif
  font-weight normal

small-text()
  font-family 'Georgia', serif
  font-size 14px
  line-height 16px

pt-serif()
  font-family 'PT Serif', serif;

action-link()
  font-family 'Arial', sans-serif
  color #aaa
  cursor pointer
  font-weight bold
  font-size 12px
  &:hover
    color black

sans()
  font-family 'Arial', sans-serif
  color black

html, body, #root
  -webkit-font-smoothing antialiased
  body-text()
  height 100%
  margin 0
  padding 0
  min-height 100vh

  b, strong
    font-weight 700

.l-explore, .l-contents
  width 100%
  height 100%
  position relative

::-webkit-scrollbar
  width 0px
::-webkit-scrollbar-track-piece
  background-color transparent
  -webkit-border-radius 6px

h1
  h1()

h2
  h2()

h3
  h3()

h4
  h4()

h5
  h5()

h6
  h6()

p
  p()

hr
  rule()

ul
  ul()

domain()
  display block
  code()
  border none
  border-radius 0
  font-size 0.7rem
  margin (unit) auto
  max-width 90%
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
